<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#041F1F"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Melhor Abastecer com: "
        android:textColor="#ffff"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtGasolina"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:ems="10"
        android:hint="Preço Gasolina"
        android:inputType="numberDecimal"
        android:textColor="#ffff"
        android:textColorHint="#908080"
        app:layout_constraintTop_toBottomOf="@+id/textResultado"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/edtEtanol"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:textColor="#ffff"
        android:textColorHint="#908080"
        android:ems="10"
        android:hint="Preço Etanol"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/textResultado"
        tools:layout_editor_absoluteX="265dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="148dp"
        app:layout_constraintTop_toBottomOf="@+id/textResultado"
        app:srcCompat="@drawable/appgasolinaetanol"
        tools:layout_editor_absoluteX="170dp" />

    <Button
        android:id="@+id/btnCalcular"
        style="@style/Widget.MaterialComponents.TimePicker.Button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#4CAF50"
        android:textColor="@color/black"
        android:layout_marginTop="32dp"
        android:text="Calcular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/btnLimpar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#4CAF50"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:text="Limpar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCalcular" />

</androidx.constraintlayout.widget.ConstraintLayout>